.padding-xxlarge.margin-xxlarge.news
  .row.expanded
    .small-12.columns
      h5
        span {{NewsViewModel.selectedNews.subject}}
  .row
    .small-12.large-6.columns
      br
      small(ng-if="NewsViewModel.selectedNews.categoryName") گروه {{NewsViewModel.selectedNews.categoryName}}
    .small-12.large-6.columns
      small.float-left {{NewsViewModel.selectedNews.submitDate}}
      br
      small.float-left {{NewsViewModel.selectedNews.authorName}}
  br
  .row
    .small-12.columns
      div(ng-bind-html="NewsViewModel.body")
  .row
    small(ng-if="NewsViewModel.selectedNews.labels[0]") برچسب ها : 
    small(ng-repeat='label in NewsViewModel.selectedNews.labels') 
      span {{label.name}} ,
  br
  .row(ng-if="NewsViewModel.selectedNews.comments[0]")
    h6 لیست نظرات
    div(ng-repeat='comment in NewsViewModel.selectedNews.comments')
      div.comment-box
        label.date-author نویسنده : 
          span {{comment.name}}
        label.date-author
          span {{comment.submitDate}}
        label نظر :   
          span {{comment.context}}
  br   
  .row
    .small-12.columns 
      button.button.primary(type='button',ng-click='NewsViewModel.openCommentPanel()') نظر شما
  .row(ng-if='NewsViewModel.openPanel')
    .small-12.columns 
      comment(news-id='NewsViewModel.id')
