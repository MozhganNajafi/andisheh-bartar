.profile
  .row
    .small-12.columns
      p &nbsp;
  .row
    .small-12.large-6.columns
      span آدرس لینکدین
      input(type='text',ng-model='ProfileViewModel.aboutus.linkedin')
    .small-12.large-6.columns
      span آدرس تلگرام
      input(type='text',ng-model='ProfileViewModel.aboutus.telegram')
    .small-12.large-6.columns
      span آدرس گروه تلگرام
      input(type='text',ng-model='ProfileViewModel.aboutus.groupTelegram')
    .small-12.large-6.columns
      span آدرس فیسبوک
      input(type='text',ng-model='ProfileViewModel.aboutus.facebook')
    .small-12.large-6.columns
      span آدرس وبلاگ
      input(type='text',ng-model='ProfileViewModel.aboutus.website')
    .small-12.large-6.columns
      span آدرس ایمیل
      input(type='text',ng-model='ProfileViewModel.aboutus.email')
  .row
    .small-12.columns
      div
        span متن درباره ما
        textarea(ui-tinymce="ProfileViewModel.tinymceOptions", ng-model="ProfileViewModel.aboutus.cv")

  .row
    .small-12.large-6.columns
      .small-12.large-6.columns
        button.button(type='button', ng-click='ProfileViewModel.save()') ذخیره
      .small-12.large-6.columns
        button.button(type='button', ng-click='ProfileViewModel.cancel()') انصراف
