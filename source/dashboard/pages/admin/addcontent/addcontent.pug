.add-content
  .row
    .small-12.columns
      p &nbsp;
  .row
    .small-12.large-6.columns
      div
        span عنوان خبر
        input(type='text', ng-model='AddContentViewModel.content.subject')

    
  
    .small-12.large-6.columns
      div
        span گروه خبر
        select(ng-model='AddContentViewModel.content.categoryId')
          option(ng-repeat="category in AddContentViewModel.categories" value="{{category.id}}") {{category.name}}

  .row
    .small-12.large-6.columns
      div
        span کلمات کلیدی
        input(type='text', ng-model='AddContentViewModel.content.keywords')
    
    .small-12.large-6.columns
      div
        span تاریخ خبر
        adm-dtp(ng-model='AddContentViewModel.content.date', options='{calType: "jalali", format: "YYYY/MM/DD"}')
  //- .row
  //-   .small-12.large-12.columns
  //-     div
  //-       span خلاصه خبر
  //-       textarea(ui-tinymce="AddContentViewModel.tinymceOptions", ng-model="AddContentViewModel.abstract")
  .row
    .small-12.large-12.columns
      div
        span متن خبر
        textarea(ui-tinymce="AddContentViewModel.tinymceOptions", ng-model="AddContentViewModel.content.body")
  .row
    .small-12.large-6.columns
      .small-12.large-6.columns
        button.button(type='button', ng-click='AddContentViewModel.save()') ذخیره
      .small-12.large-6.columns
        button.button(type='button', ng-click='') انصراف

     
